<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_background"
    tools:context=".ui.clubs.ClubsDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/text_background">

                <androidx.cardview.widget.CardView
                    android:id="@+id/clubNameCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/teacherDetailMarginCardSides"
                    android:layout_marginTop="@dimen/teacherDetailMarginCardTop"
                    android:layout_marginRight="@dimen/teacherDetailMarginCardSides"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F4F4F4">


                        <TextView
                            android:id="@+id/clubNameLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/teacherDetailInnerMargin"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text="CLUB NAME"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorProfile"
                            android:textSize="@dimen/teacherDetailTeacherNameLabel"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/clubName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/teacherDetailInnerMargin"
                            android:layout_marginEnd="@dimen/teacherDetailInnerMargin"
                            android:layout_marginBottom="@dimen/teacherDetailInnerMargin"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:text="Developers Student Club"
                            android:textColor="@color/subTextColor"
                            android:textSize="@dimen/teacherDetailTeacherNameLabel"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/clubNameLabel" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/clubGenreCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/teacherDetailMarginCardSides"
                    android:layout_marginTop="@dimen/teacherDetailMarginCardTop"
                    android:layout_marginRight="@dimen/teacherDetailMarginCardSides"
                    android:elevation="10dp"
                    app:cardCornerRadius="7dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clubNameCardView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/constraint_background">


                        <TextView
                            android:id="@+id/clubGenreLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/teacherDetailInnerMargin"
                            android:layout_marginTop="@dimen/teacherDetailInnerMargin"
                            android:letterSpacing="0.1"
                            android:padding="@dimen/teacherDetailInnerPadding"
                            android:text="CLUB GENRE"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorProfile"
                            android:textSize="@dimen/teacherDetailLabels"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/clubGenre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/teacherDetailInnerMargin"
                            android:layout_marginRight="@dimen/teacherDetailInnerMargin"
                            android:layout_marginBottom="@dimen/teacherDetailInnerMargin"
                            android:fontFamily="serif"
                            android:text="Google Cloud, Android, Web, ML, AI"
                            android:textColor="@color/subTextColor"
                            android:textSize="@dimen/teacherDetailLabels"
                            android:paddingStart="@dimen/teacherDetailInnerPadding"
                            android:paddingLeft="@dimen/teacherDetailInnerPadding"
                            android:paddingBottom="@dimen/teacherDetailInnerPadding"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/clubGenreLabel" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/clubLeadNameCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/teacherDetailMarginCardSides"
                    android:layout_marginTop="@dimen/teacherDetailMarginCardTop"
                    android:layout_marginRight="@dimen/teacherDetailMarginCardSides"
                    android:elevation="10dp"
                    app:cardCornerRadius="7dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clubGenreCardView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/constraint_background">


                        <TextView
                            android:id="@+id/clubLeadNameLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/teacherDetailInnerMargin"
                            android:layout_marginTop="@dimen/teacherDetailInnerMargin"
                            android:letterSpacing="0.1"
                            android:padding="@dimen/teacherDetailInnerPadding"
                            android:text="CLUB LEAD NAME"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorProfile"
                            android:textSize="@dimen/teacherDetailLabels"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/clubLeadName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/teacherDetailInnerMargin"
                            android:layout_marginRight="@dimen/teacherDetailInnerMargin"
                            android:layout_marginBottom="@dimen/teacherDetailInnerMargin"
                            android:fontFamily="serif"
                            android:text="Poornachandra Kashi"
                            android:textColor="@color/subTextColor"
                            android:textSize="@dimen/teacherDetailLabels"
                            android:paddingStart="@dimen/teacherDetailInnerPadding"
                            android:paddingLeft="@dimen/teacherDetailInnerPadding"
                            android:paddingBottom="@dimen/teacherDetailInnerPadding"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/clubLeadNameLabel" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/clubLeadContactNumberCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/teacherDetailMarginCardSides"
                    android:layout_marginTop="@dimen/teacherDetailMarginCardTop"
                    android:layout_marginRight="@dimen/teacherDetailMarginCardSides"
                    android:elevation="10dp"
                    app:cardCornerRadius="7dp"
                    app:layout_constraintTop_toBottomOf="@id/clubLeadNameCardView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/constraint_background">


                        <TextView
                            android:id="@+id/clubLeadContactNumberLabel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/teacherDetailInnerMargin"
                            android:layout_marginTop="@dimen/teacherDetailInnerMargin"
                            android:letterSpacing="0.1"
                            android:padding="@dimen/teacherDetailInnerPadding"
                            android:text="CLUB LEAD CONTACT NUMBER"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorProfile"
                            android:textSize="@dimen/teacherDetailLabels"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/clubLeadContactNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/teacherDetailInnerMargin"
                            android:layout_marginRight="@dimen/teacherDetailInnerMargin"
                            android:layout_marginBottom="@dimen/teacherDetailInnerMargin"
                            android:fontFamily="serif"
                            android:text="9988522110"
                            android:textColor="@color/subTextColor"
                            android:textSize="@dimen/teacherDetailLabels"
                            android:paddingStart="@dimen/teacherDetailInnerPadding"
                            android:paddingLeft="@dimen/teacherDetailInnerPadding"
                            android:paddingBottom="@dimen/teacherDetailInnerPadding"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/clubLeadContactNumberLabel" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/clubDescriptionCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/teacherDetailMarginCardSides"
                    android:layout_marginTop="@dimen/teacherDetailMarginCardTop"
                    android:layout_marginRight="@dimen/teacherDetailMarginCardSides"
                    android:elevation="10dp"
                    app:cardCornerRadius="7dp"
                    app:layout_constraintTop_toBottomOf="@id/clubLeadContactNumberCardView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/constraint_background">


                        <TextView
                            android:id="@+id/clubDescriptionLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/teacherDetailInnerMargin"
                            android:layout_marginTop="@dimen/teacherDetailInnerMargin"
                            android:letterSpacing="0.1"
                            android:padding="@dimen/teacherDetailInnerPadding"
                            android:text="CLUB DESCRIPTION"
                            android:textAllCaps="true"
                            android:textColor="@color/textColorProfile"
                            android:textSize="@dimen/teacherDetailLabels"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/clubDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/teacherDetailInnerMargin"
                            android:layout_marginRight="@dimen/teacherDetailInnerMargin"
                            android:layout_marginBottom="@dimen/teacherDetailInnerMargin"
                            android:fontFamily="serif"
                            android:text="This is a good club to exhibit
                your talents and showcase your technical skils. You can learn latest technologies and expand your network through this club.
"
                            android:textColor="@color/subTextColor"
                            android:textSize="@dimen/teacherDetailLabels"
                            android:paddingStart="@dimen/teacherDetailInnerPadding"
                            android:paddingLeft="@dimen/teacherDetailInnerPadding"
                            android:paddingBottom="@dimen/teacherDetailInnerPadding"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/clubDescriptionLabel" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:layout_constraintTop_toBottomOf="@id/clubDescriptionCardView" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>